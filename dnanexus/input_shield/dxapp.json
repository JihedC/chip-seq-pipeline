{
  "name": "input_shield",
  "title": "ChIP-seq Input Shield",
  "summary": "Fetches input files and parameters from appropriate places and feeds them into the ChIP-seq pipeline",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "ENCODE Analysis Pipeline"
  ],
  "inputSpec": [
    {
      "name": "reads1",
      "label": "reads1",
      "class": "array:string",
      "optional": false
    },
    {
      "name": "reads2",
      "label": "reads2",
      "class": "array:string",
      "optional": true,
      "default": []
    },
    {
      "name": "crop_length",
      "label": "Native or length to crop reads to",
      "class": "string",
      "optional": true,
      "default": "native"
    },
    {
      "name": "reference_tar",
      "label": "Over-rides the otherwise automatically-chosen reference",
      "class": "string",
      "optional": true,
      "default": ""
    },
    {
      "name": "bwa_aln_params",
      "label": "Command-line parameters to BWA aln",
      "class": "string",
      "optional": true,
      "default": "-q 5 -l 32 -k 2"
    },
    {
      "name": "key",
      "class": "string",
      "optional": true
    },
    {
      "name": "keyfile",
      "class": "string",
      "optional": true,
      "default": "keypairs.json"
    },
    {
      "name": "debug",
      "label": "debug mode",
      "class": "boolean",
      "optional": true,
      "default": false
    }
  ],
  "outputSpec": [
    {
      "name": "reads1",
      "label": "reads1",
      "class": "file"
    },
    {
      "name": "reads2",
      "label": "reads2",
      "class": "file",
      "optional": true
    },
    {
      "name": "crop_length",
      "label": "Native or length to crop reads to",
      "class": "string"
    },
    {
      "name": "reference_tar",
      "label": "Over-rides the otherwise automatically-chosen reference",
      "class": "file"
    },
    {
      "name": "bwa_aln_params",
      "label": "Command-line parameters to BWA aln",
      "class": "string"
    },
    {
      "name": "debug",
      "label": "debug mode",
      "class": "boolean"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/input_shield.py",
    "distribution": "Ubuntu", "release": "14.04",
    "execDepends": [
    ],
    "assetDepends": [
      {
        "name": "awscli_asset",
        "_comment": "ChIPv2-dev",
        "project": "project-FB3YPP00jjb547qG1V9Y0Q9Y",
        "version": "0.0.1",
        "folder": "/ChIP-seq/assets/"
      },  
      {
        "name": "common_asset",
        "_comment": "ChIPv2-dev",
        "project": "project-FB3YPP00jjb547qG1V9Y0Q9Y",
        "version": "0.0.1",
        "folder": "/ChIP-seq/assets/"
      }
    ],
    "systemRequirements": {
      "main": {"instanceType": "mem2_hdd2_x4"}
    }
  },
  "access": {
    "network": ["*"],
    "project": "UPLOAD",
    "allProjects": "UPLOAD"
  },
  "authorizedUsers": []
}
