{
  "name": "scrub",
  "title": "ENCODE bam scrubber",
  "summary": "Removes sequence and PHRED strings from bam files",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "input_bams",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "scrubbed_bams",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "python2.7",
    "file": "src/scrub.py",
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd2_x2"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04",
    "assetDepends": [
      {
            "name": "common_asset",
            "_comment": "ChIPv2-dev",
            "project": "project-FB3YPP00jjb547qG1V9Y0Q9Y",
            "version": "0.0.1",
            "folder": "/ChIP-seq/assets/"
      },
      {
            "name": "samtools_asset",
            "_comment": "ChIPv2-dev",
            "project": "project-FB3YPP00jjb547qG1V9Y0Q9Y",
            "version": "0.0.1",
            "folder": "/ChIP-seq/assets/"
      }
    ]
  }
}
